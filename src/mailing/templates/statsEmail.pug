h2(style={textAlign: 'center'}) Requested bitcoin stats
table(style={borderCollapse: 'collapse', width: '100%'})
    tr 
        th(style={padding: '15px', backgroundColor: '#04aa6d', color: 'white'}) Average price
        th(style={padding: '15px', backgroundColor: '#04aa6d', color: 'white'}) Time
    each stat, index in stats 
        tr(style={backgroundColor: index % 2 !== 0 ? '#f2f2f2' : 'white'})  
            td(style={padding: '15px', textAlign: 'center'}) #{stat.averagePrice} 
            td(style={padding: '15px', textAlign: 'center'}) #{stat.timeStamp} 

